@model Framework.WebUI.Models.ViewModels.RolVM
@{
    ViewBag.Title = "RolSec";
    ViewBag.PageId = "extr-page";
    ViewBag.PageClass = "animated fadeInDown";
    Layout = "~/Views/Shared/_LayoutRolSec.cshtml";
}

@section topright{

}
<style type="text/css">
    .center {
        position: fixed;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<div id="content" class="container center">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
            <h2 class="page-header">Rol Seçiniz</h2>
            <ul class="list-group nav">
                @foreach (var item in Model.Roller)
                {
                    <li class="list-group-item">
                        <a href="@Url.Action(item.ActionName, item.ControllerName, new { area = item.AreaName})">
                            @item.Description
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>

