    <script type="text/javascript">
        var dt;

        var dt_settings = {
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            },
            "searching": true
        };

        $(document).ready(function () {
            dt = $('#dtBeyan').DataTable(dt_settings);
        });
    </script>

    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            var bsDefaults = {
                offset: false,
                overlay: true,
                height: '450px'
            },
                bsMain = $('.bs-offset-main'),
                bsOverlay = $('.bs-canvas-overlay');

            $('[data-toggle="canvas"][aria-expanded="false"]').on('click', function () {
                $('#pnlKriter').show();
                var canvas = $(this).data('target'),
                    opts = $.extend({}, bsDefaults, $(canvas).data()),
                    prop = $(canvas).hasClass('bs-canvas-right') ? 'margin-right' : 'margin-left';

                if (opts.width === '100%')
                    opts.offset = false;

                $(canvas).css('width', opts.width);
                if (opts.offset && bsMain.length)
                    bsMain.css(prop, opts.width);

                $(canvas + ' .bs-canvas-close').attr('aria-expanded', "true");
                $('[data-toggle="canvas"][data-target="' + canvas + '"]').attr('aria-expanded', "true");
                if (opts.overlay && bsOverlay.length)
                    bsOverlay.addClass('show');
                return false;
            });

            $('.bs-canvas-close, .bs-canvas-overlay').on('click', function () {
                $('#pnlKriter').hide();
                var canvas, aria;
                if ($(this).hasClass('bs-canvas-close')) {
                    canvas = $(this).closest('.bs-canvas');
                    aria = $(this).add($('[data-toggle="canvas"][data-target="#' + canvas.attr('id') + '"]'));
                    if (bsMain.length)
                        bsMain.css(($(canvas).hasClass('bs-canvas-right') ? 'margin-right' : 'margin-left'), '');
                } else {
                    canvas = $('.bs-canvas');
                    aria = $('.bs-canvas-close, [data-toggle="canvas"]');
                    if (bsMain.length)
                        bsMain.css({
                            'margin-left': '',
                            'margin-right': ''
                        });
                }
                canvas.css('width', '');
                aria.attr('aria-expanded', "false");
                if (bsOverlay.length)
                    bsOverlay.removeClass('show');
                return false;
            });
        });
    </script>

    <!--Export Excel-->
    <script type="text/javascript">
        $(function () {
            $("#btnExport").click(function () {
                var tbl = $('#tblBeyan');
                tbl.find('th:last-child, td:last-child').remove();
                tbl.find('th:first-child, td:first-child').remove();
                $("#tblBeyan").table2excel({
                    filename: "Beyanlar.xls"
                });
            });
        });
    </script>

    <!--Export PDf-->
    <script>
        function createPDF() {
            var tbl = $('#tblBeyan');
            tbl.find('th:last-child, td:last-child').remove()
            tbl.find('th:first-child, td:first-child').remove()

            html2canvas(tbl, {
                onrendered: function (canvas) {
                    var data = canvas.toDataURL();
                    var docDefinition = {
                        content: [{
                            image: data,
                            width: 500
                        }]
                    };
                    pdfMake.createPdf(docDefinition).download("Beyan.pdf");
                }
            });
        }
    </script>

    <!--Tahakkuk Bilgileri-->
    <script type="text/javascript">
        function ParseDate(input) {
            var offset = new Date().getTimezoneOffset() * 60000;
            var currentTime = new Date(parseInt(input.substr(6)));
            var month = currentTime.getMonth() + 1;
            var day = currentTime.getDate();
            var year = currentTime.getFullYear();
            var date = day + "/" + month + "/" + year;
            return date;
        }


        $('#tblBeyan td:first-child').click(function (e) {

            var id = $(this).attr("data-id");
            var beyanYil = $(this).attr("data-yil");

            var table = $('#tblBeyan').DataTable();

            var tr = $(this).closest('tr');

            var row = table.row(tr);


            $.ajax({
                url: "/Kira/Beyan/GetirDetayTable/",
                type: "Post",
                dataType: 'Json',
                data: { BeyanId: id },
                success: function (success) {
                    if (success.data != null && success.data.length > 0) {
                        var KiraBeyan_Id = success.data[0].KiraBeyan_Id;
                        $("#hdDetayValue").val(KiraBeyan_Id);

                        if (row.child.isShown()) {
                            row.child.hide();
                            tr.removeClass('shown');
                        } else {
                            row.child.isShown();
                            var result = row.child(subTable(KiraBeyan_Id, beyanYil, success.data)).show();

                            if (result != null) {
                                result.show();
                                tr.addClass('shown');
                            }
                        }
                    }
                },
            });
        });

        function subTable(KiraBeyan_Id, BeyanYil, dataSource) {

            var html = '<table id="tblDetay" class="table table-striped table-bordered table-hover dataTable no-footer display nowrap">'

                + '<thead><tr>' +
                '<th>No</th>' +
                '<th>Beyan Yıl</th>' +
                '<th>Taksit No</th>' +
                '<th>Vade Tarihi</th>' +
                '<th>Tutar</th>' +
                '<th>Açıklama</th>' +
                '<th>Durum</th>' +
                '<th>Aktif Mi</th></tr >' +
                '</thead > ';
            var durum = '';
            var aktifMiStr = '';
            if (dataSource != null) {
                for (var i = 0; i < dataSource.length; i++) {

                    if (dataSource[i].OdemeDurumu) {
                        durum = '<b class="label aktif-buton-beyandetay">Tahsil </b>';
                    }
                    else {
                        durum = '<b class="label pasif-buton-beyandetay">Vade</b>';
                    }
                    debugger
                    if (dataSource[i].AktifMi == 1) {
                        aktifMiStr = '<b class="label aktif-buton-beyandetay">Aktif</b>';
                    }
                    else if (dataSource[i].AktifMi == 0) {
                        aktifMiStr = '<b class="label pasif-buton-beyandetay">Pasif</b>';
                    }
                    else if (dataSource[i].AktifMi == 2) {
                        aktifMiStr = '<b class="label silindi-buton-beyandetay">Silindi</b>';
                    }

                    if (KiraBeyan_Id == dataSource[i].KiraBeyan_Id) {
                        html += '<tr role="row">' +
                            '<td role="row" class="odd">' + (i + 1) + '</td>' +
                            '<td>' + BeyanYil + '</td>' +
                            '<td>' + dataSource[i].TaksitNo + '</td>' +
                            '<td>' + ParseDate(dataSource[i].VadeTarihi) + '</td>' +
                            '<td>' + dataSource[i].Tutar + '</td>' +
                            '<td>' + dataSource[i].Aciklama + '</td>' +
                            '<td>' + durum + '</td>' +
                            '<td>' + aktifMiStr + '</td>' +
                            '</tr>';
                    }
                }
            }
            html += '</table>';
            return html;
        }

    </script>

    <!--Datepicker-->
    <script type="text/javascript">
        $(document).ready(function () {
            jQuery.validator.methods.date = function (value, element) {
                var d = value.split(".");
                return this.optional(element) || !/Invalid|NaN/.test(new Date((/chrom(e|ium)/.test(navigator.userAgent.toLowerCase())) ? d[1] + "." + d[0] + "." + d[2] : value));
            };
            $('.datepicker').on('click', function (e) {
                e.preventDefault();
                $(this).attr("autocomplete", "off");
            });
            $('#Tarih').datepicker({
