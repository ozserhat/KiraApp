@model Framework.WebUI.Models.ViewModels.KiraBeyanVM
@using PagedList;
@using PagedList.Mvc;

@{
    int sonSayfa = 0;
    ViewBag.Title = "Index";
    Layout = "~/Areas/Kira/Views/Shared/_LayoutKira.cshtml";
}


@if (Model.Errors != null && Model.Errors.Count > 0)
{
    <div id="content">
        <section id="widget-grid">
            <div class="row">
                <div class="row alert alert-danger">
                    <i class="glyphicon glyphicon-warning-sign col-md-1"></i>
                    <ul style="list-style-type:none" class="col-md-11">
                        @foreach (var item in Model.Errors)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </div>
            </div>
        </section>
    </div>
}
@if (!Model.HideContent)
{
    <div id="content">
        <section id="widget-grid" class="sayfaust_bosluk">
            <div class="row">
                <article class="col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget sorgulama-kriteri" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-list"></i> </span>
                            <h2>Sorgulama Kriterleri</h2>
                            <div style="float:right; ">
                                <p>
                                    @Html.AuthActionLink(" Beyan Ekle", "Ekle", "Beyan", "btn btn-primary",
                                 "glyphicon glyphicon-plus", Convert.ToBoolean(TempData["OpenAuthorizationPopup"]))
                                </p>
                            </div>
                        </header>

                        <div role="contentinfo">
                            <div class="widget-body">
                                <div class="tab-pane fade active in">

                                    @using (Html.BeginForm("Index", "Beyan", new { page = 1 }, FormMethod.Post, new { @id = "sorgulamaKriterleri" }))
                                    {
                                        <div class="widget-body">
                                            @Html.HiddenFor(model => model.PageSize)
                                            <fieldset>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <div class="input-group" style="width: 100%;">
                                                                @Html.LabelFor(model => model.BeyanTurSelectList, new { @class = "control-label col-md-4 font-bold" })
                                                                <div class="col-md-8">
                                                                    @Html.DropDownList("BeyanTur_Id", Model.BeyanTurSelectList, "Seçiniz", new { @class = "select2" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <div class="input-group" style="width: 100%;">
                                                                @Html.LabelFor(model => model.KiraDurumSelectList, new { @class = "control-label col-md-4 font-bold" })
                                                                <div class="col-md-8">
                                                                    @Html.DropDownList("KiraDurum_Id", Model.KiraDurumSelectList, "Seçiniz", new { @class = "select2" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <div class="input-group" style="width: 100%;">
                                                                @Html.LabelFor(model => model.OdemePeriyotSelectList, new { @class = "control-label col-md-4 font-bold" })
                                                                <div class="col-md-8">
                                                                    @Html.DropDownList("OdemePeriyotTur_Id", Model.OdemePeriyotSelectList, "Seçiniz", new { @class = "select2" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <div class="input-group" style="width: 100%;">
                                                                @Html.LabelFor(model => model.GayrimenkulSelectList, new { @class = "control-label col-md-4 font-bold" })
                                                                <div class="col-md-8">
                                                                    @Html.DropDownList("Gayrimenkul_Id", Model.GayrimenkulSelectList, "Seçiniz", new { @class = "select2" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <div class="input-group" style="width: 100%;">
                                                                @Html.LabelFor(model => model.IlceSelectList, new { @class = "control-label col-md-4 font-bold" })
                                                                <div class="col-md-8">
                                                                    @Html.DropDownList("Ilce_Id", Model.IlceSelectList, "Seçiniz", new { @class = "select2" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <div class="form-group">
                                                            <div class="input-group" style="width: 100%;">
                                                                @Html.LabelFor(model => model.MahalleSelectList, new { @class = "col-md-4 font-bold" })
                                                                <div class="col-md-8">
                                                                    @Html.DropDownList("Mahalle_Id", new SelectList(string.Empty, "Value", "Text"), "Seçiniz", new { @class = "select2" })
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="form-actions btn-foot-s">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <input id="btnSubmit" type="submit" value="Sorgula" class="btn btn-primary btn-header-btn">
                                                </div>
                                                <div class="col-md-12">
                                                    <input id="btnReset" type="reset" value="Temizle" class="btn btn-warning btn-header-btn">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
        <section id="widget-grid">
            <div class="row">
                <article class="col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-list"></i> </span>
                            <h2>Beyan Listesi - <b>Toplam Beyan Adedi : @Model.TotalRecordCount</b></h2>
                            <div style="float:right; margin-top: -5px; padding-bottom: 8px;">

                            </div>
                        </header>
                        <div role="contentinfo">
                            <div class="widget-body">
                                <div class="tab-pane fade active in">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <table id="dt_basic" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="dt_basic_info">
                                                <thead>
                                                    <tr role="row">
                                                        <th style="width: 20px;">No</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Tür Adı</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Beyan No</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Sicil No</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Kiracı Bilgi</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Gayrimenkul No</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">İl</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">İlçe</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Mahalle</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Durum</th>
                                                        <th class="sorting_disabled text-center" rowspan="1" colspan="1" style="text-align: right;  padding-right: 30px; width: 100px;">İşlem</th>
                                                    </tr>
                                                </thead>
                                                @if (Model.Beyanlar != null && Model.Beyanlar.Count > 0)
                                                {
                                                    <tbody>

                                                        @{int i = ((Model.PageNumber - 1) * Model.PageSize) + 1;}

                                                        @foreach (var item in Model.Beyanlar)
                                                        {
                                                            <tr role="row" class="odd">
                                                                <td>@(i++)</td>
                                                                <td>@Html.DisplayFor(model => item.Beyanlar.BeyanTur.Ad)</td>
                                                                <td>@Html.DisplayFor(model => item.Beyanlar.BeyanNo)</td>
                                                                <td>@Html.DisplayFor(model => item.Kiracilar.SicilNo)</td>
                                                                <td>@Html.DisplayFor(model => item.Kiracilar.Ad)</td>
                                                                <td>@Html.DisplayFor(model => item.Gayrimenkuller.GayrimenkulNo)</td>
                                                                <td>@Html.DisplayFor(model => item.Gayrimenkuller.Mahalleler.Ilceler.Iller.Ad)</td>
                                                                <td>@Html.DisplayFor(model => item.Gayrimenkuller.Mahalleler.Ilceler.Ad)</td>
                                                                <td>@Html.DisplayFor(model => item.Gayrimenkuller.Mahalleler.Ad)</td>
                                                                <td>
                                                                    @if (item.Beyanlar.AktifMi.HasValue && item.Beyanlar.AktifMi.Value)
                                                                    {
                                                                        <b class="label aktif-buton">Aktif</b>
                                                                    }
                                                                    else
                                                                    {
                                                                        <b class="label pasif-buton">Pasif</b>
                                                                    }
                                                                </td>
                                                                <td class="text-center">
                                                                    @Html.AuthAction(" ", "Duzenle", "Beyan", new { item.Beyanlar.Guid },
                                                                            new { @class = "no-underline margin-right-5 fa fa-edit font-md txt-color-blue" },
                                                                            Convert.ToBoolean(TempData["OpenAuthorizationPopup"]))

                                                                    @Html.AuthAction(" ", "Sil", "Beyan", new { item.Id },
                                                                                    new { @class = "no-underline margin-right-5 fa fa-remove font-md txt-color-blue", @data_name = item.Beyanlar.BeyanNo, @data_id = item.Beyanlar.Id },
                                                                                    Convert.ToBoolean(TempData["OpenAuthorizationPopup"]))
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                }
                                                else
                                                {
                                                    <tbody>
                                                    </tbody>
                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>

    </div>

    using (Html.BeginForm("Index", "Beyan", new { page = 1 }, FormMethod.Post, new { @id = "sorgulamaKriterleri" }))
    {
        <input id="page" name="page" type="hidden" value="">
    }
}


@section pagespecific {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/SweetAlert/sweetalert2.css" rel="stylesheet" />
    <script src="~/Content/SweetAlert/sweetalert2.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            if (@sonSayfa < 8) {
                $("#sayfalama").css("display", "none");
            }
        });
    </script>

    <script type="text/javascript">

        $("#btnGit").on("click", function () {
            if (@sonSayfa > $("#sayfayaGit").val()) {
                $("#page").val($("#sayfayaGit").val());
                $("#sorgulamaKriterleri").submit();
            }
            else {
                $("#page").val(@sonSayfa);
                $("#sorgulamaKriterleri").submit();
            }
        });

    </script>

    <!--İlçe Bilgileri-->
    <script type="text/javascript">
        $(document).ready(function () {

            $("#Ilce_Id").change(function (e) {

                var ilceId = $(this).val();

                if (ilceId != null&&ilceId!='') {
                    $.ajax({
                        type: 'Post',
                        url: '/Beyan/MahalleSelectList/ilceId=' + ilceId,
                        data: { ilceId: ilceId },
                        success: function (result) {
                            if (result != null && result.success) {
                                $("#Mahalle_Id").empty();
                                $("#Mahalle_Id").append(
                                    $('<option></option>').val(null).html('Lütfen Seçiniz'));
                                $.each(result.Data, function (i, data) {
                                    $('<option></option>').val(null).html('');
                                    $("#Mahalle_Id").append(
                                        $('<option></option>').val(data.Id).html(data.Ad));
                                });
                            }
                            else {
                                swal('Uyarı!', result.Message, 'warning');
                            }
                        },
                        error: function (xhr) {
                            swal('Uyarı!', result.Message, 'warning');
                        }
                    });
                }
            });
        });
    </script>

