            height: 10em;
            width: 20em;
            overflow: visible;
            margin: auto;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
        }
    </style>


    <!--Belge Ekleme -->
    <script type="text/javascript">

        $(document).on("change", ".taranmisDosya", function () {

            var BasvuruGrupTipi_DosyaTipi_Id = $(this).attr("data-id");
            $("#placeholder_" + BasvuruGrupTipi_DosyaTipi_Id).val($(this).val().replace(/C:\\fakepath\\/, ''));
        });

        function BelgeEkle(gayrimenkulId) {

            var $valid = $("#BelgeEkleForm").valid();
            if (!$valid) {
                $validatorBelgeEkle.focusInvalid();
                return false;
            } else {

                $("#path").val("");

                $('#loadingbtnBelgeEkleme').removeClass();
                $("#btnBelgeKaydet").removeClass();
                $("#btnBelgeKaydet").addClass('btn btn-warning hide');


                var sonuc = true;
                var sayac = 0;
                var elems = $("form .taranmisDosya");
                var count = elems.length;
                var tumDosyalarYuklendiMi = true;
                setTimeout(function () {
                    if (tumDosyalarYuklendiMi) {
                        $("#btnBelgeKaydet").removeClass();
                        $("#btnBelgeKaydet").addClass('btn btn-primary');
                        $('#loadingbtnBelgeEkleme').addClass('hide');
                    }
                }, 1500);


            }
        }
    </script>
    <!--Tab Control-->
    <script type="text/javascript">
        $(document).ready(function () {

            const wizard = $('#wizard');

            wizard.bootstrapWizard({
                'tabClass': 'nav nav-pills',
                onTabClick: function (tab, navigation, index) {
                    return false;
                },
                onNext: function (tab, navigation, index) {
                },
                onTabShow: function (tab, navigation, index) {

                    const $total = navigation.find('li').length;
                    const $current = index + 1;

                    const pager = wizard.find('.pager');

                    if ($current >= $total) {
                        pager.find('.next').hide();
                        pager.find('.finish').show();
                        pager.find('.finish').removeClass('disabled');

                    } else {
                        pager.find('.next').show();
                        pager.find('.finish').hide();
                    }
                }
            });

        });
    </script>

    <!--Beyan Ekle-->
    <script type="text/javascript">
        $(function () {
            $('#btnSonKaydet').on('click', function () {
                kiraBeyanModel = new Object();
                kiraBeyanModel.EncumenKararNo = $("#Beyan_EncumenKararNo").val();
                kiraBeyanModel.NoterSozlesmeNo = $("#Beyan_NoterSozlesmeNo").val();

                if ($("#beyanForm").valid())
                {
                   $.ajax({
                    type: 'POST',
                    url: '@Url.Action("KiraBeyanEkle", "Beyan")',
                    data: { kiraBeyanModel: kiraBeyanModel },
                    success: function (result) {
                        if (result != null && result.success) {

                            swal('Uyarı!', result.Message, 'warning');

                            setTimeout(function () {
                                window.location.href = "../Beyan_Tur/Index";
                            }, 2000);
                        }
                        else {
                            swal('Uyarı!', result.Message, 'warning');
                        }
                    },
                    error: function (xhr) {
                        swal('Uyarı!', result.Message, 'warning');
                    }
                 });
                }
            });
        });
    </script>

}

