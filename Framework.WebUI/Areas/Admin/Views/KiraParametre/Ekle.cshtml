@section pagespecific {
    <!-- Sweet Alert -->
    <link href="~/Content/SweetAlert/sweetalert2.css" rel="stylesheet" />
    <script src="~/Content/SweetAlert/sweetalert2.min.js"></script>
    @Scripts.Render("~/bundles/jqueryval")


    <!--GayrimenkulTur Ekle-->
    <script type="text/javascript">
        $(function () {
            $('#btnSubmit').on('click', function () {
                parametre = new Object();
                parametre.BeyanYili = $("#BeyanYili option:selected").text();
                parametre.KiraTarifeKodu = $("#KiraTarifeKodu").val();
                parametre.OtoparkTarifeKodu = $("#OtoparkTarifeKodu").val();
                parametre.EcrimisilTarifeKodu = $("#EcrimisilTarifeKodu").val();
                parametre.DamgaTarifeKodu = $("#DamgaTarifeKodu").val();
                parametre.TeminatTarifeKodu = $("#TeminatTarifeKodu").val();
                parametre.KararHarciTarifeKodu = $("#KararHarciTarifeKodu").val();
                parametre.KapatmaTarifeKodu = $("#KapatmaTarifeKodu").val();
                parametre.KdvTarifeKodu = $("#KdvTarifeKodu").val();
                parametre.DamgaOran = $("#DamgaOran").val();
                parametre.TeminatOran = $("#TeminatOran").val();
                parametre.KararHarciOran = $("#KararHarciOran").val();
                parametre.AktifMi = $("#AktifMi").val();

                if($("#submitForm").valid())
                {
                   $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Ekle", "KiraParametre")',
                    data: { parametreModel: parametre},
                    success: function (result) {
                     if (result != null && result.success) {
                         swal('Bilgi!', result.Message, 'success');
                            setTimeout(function () {
                                window.location.href = "../KiraParametre/Index";
                            }, 2000);
                        }
                        else {
                            swal('Uyarı!', result.Message, 'warning');
                        }
                    },
                    error: function (xhr) {
                        swal('Uyarı!', result.Message, 'warning');
                    }
                 });
                }
            });
        });
    </script>

    <!--Form Temizleme İşlemi -->
    <script type="text/javascript">
        function clearForm() {
            document.getElementById("AktifMi").checked = false;
            $('#BeyanYili').select2("val", "");
        }
    </script>
}

