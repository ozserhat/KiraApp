                                                            @Html.ValidationMessageFor(model => model.TeminatTarifeKodu, "Lütfen bir sayı giriniz!", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.KararHarciTarifeKodu, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.KararHarciTarifeKodu, new { @class = "form-control col-md-4 required", @type = "number" })
