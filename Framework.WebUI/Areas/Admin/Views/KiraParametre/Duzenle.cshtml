                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.KapatmaTarifeKodu, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.KapatmaTarifeKodu, new { @class = "form-control col-md-4 required", @type = "number" })
                                                            @Html.ValidationMessageFor(model => model.KapatmaTarifeKodu, "Lütfen bir sayı giriniz!", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.KdvTarifeKodu, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.KdvTarifeKodu, new { @class = "form-control col-md-4 required", @type = "number" })
