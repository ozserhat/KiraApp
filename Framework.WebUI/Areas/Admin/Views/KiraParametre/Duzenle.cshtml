                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.DamgaOran, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.DamgaOran, new { @class = "form-control col-md-4 required", @type = "number" })
                                                            @Html.ValidationMessageFor(model => model.DamgaOran, "Lütfen bir sayı giriniz!", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.TeminatOran, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.TeminatOran, new { @class = "form-control col-md-4 required", @type = "number" })
                                                            @Html.ValidationMessageFor(model => model.TeminatOran, "Lütfen bir sayı giriniz!", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.KararHarciOran, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.KararHarciOran, new { @class = "form-control col-md-4 required", @type = "number" })
                                                            @Html.ValidationMessageFor(model => model.KararHarciOran, "Lütfen bir sayı giriniz!", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div> 

                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.AktifMi, new { @class = "control-label col-md-4" })
                                                        <div class="col-md-8 form-control-static">
                                                            @Html.CheckBoxFor(model => model.AktifMi, new { @style = "width: 16px; height: 16px;" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </fieldset>
                                        </div>
                                        <div class="form-actions">
                                            <div class="row">
                                                <div class="col-md-6 col-xs-offset-2" style="padding-right: 30px;">
                                                    <input id="btnReset" type="button" onclick="clearForm()" value="Temizle" class="btn btn-warning">
                                                    <input id="btnSubmit" type="submit" value="Kaydet" class="btn btn-primary">
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>
    </div>
}


@section pagespecific {
    @Scripts.Render("~/bundles/jqueryval")
    <!--Form Temizleme İşlemi -->
    <script type="text/javascript">
        function clearForm() {
            document.getElementById("AktifMi").checked = false;
            document.getElementById("KiraTarifeKodu").value = "";
            document.getElementById("OtoparkTarifeKodu").value = "";
            document.getElementById("EcrimisilTarifeKodu").value = "";
            document.getElementById("DamgaTarifeKodu").value = "";
            document.getElementById("TeminatTarifeKodu").value = "";
            document.getElementById("KararHarciTarifeKodu").value = "";
            document.getElementById("KapatmaTarifeKodu").value = "";
            document.getElementById("KdvTarifeKodu").value = "";
            document.getElementById("DamgaOran").value = "";
            document.getElementById("TeminatOran").value = "";
            document.getElementById("BeyanYili").value = "";
            document.getElementById("KararHarciOran").value = "";
        }
    </script>
}
