                            <span class="widget-icon"> <i class="fa fa-list"></i> </span>
                            <h2>Parametre Düzenle</h2>
                        </header>
                        <div role="contentinfo">
                            <div class="widget-body">
                                <div class="tab-pane fade active in">
                                    @using (Html.BeginForm("Duzenle", "KiraParametre", FormMethod.Post, new { enctype = "multipart/form-data", id = "submitForm" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.HiddenFor(model => model.Guid)
                                        <div class="widget-body">
                                            <fieldset>

                                                @Html.ValidationSummary(true)
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.BeyanYili, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.BeyanYili, new { @class = "form-control col-md-4 required" })
                                                            @Html.ValidationMessageFor(model => model.BeyanYili, "Lütfen bir yıl giriniz!", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
                                                        @Html.LabelFor(model => model.KiraTarifeKodu, new { @class = "control-label col-md-4 zorunluYildiz" })
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.KiraTarifeKodu, new { @class = "form-control col-md-4 required", @type = "number" })
                                                            @Html.ValidationMessageFor(model => model.KiraTarifeKodu, "Lütfen bir sayı giriniz!", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-sm-12 col-md-6 col-lg-6 form-group col-xs-offset-2">
