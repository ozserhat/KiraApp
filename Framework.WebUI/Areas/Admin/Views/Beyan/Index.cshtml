                '<th>Vade Tarihi</th>' +
                '<th>Tutar</th>' +
                '<th>Açıklama</th>' +
                '<th>Durum</th>';

            if (dataSource != null) {
                for (var i = 0; i < dataSource.length; i++) {

                    if (BeyanId == dataSource[i].KiraBeyan_Id) {
                        html += '<tbody><tr>' +
                            '<td>' + dataSource[i].BeyanYil + '</td>' +
