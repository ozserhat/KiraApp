@model Framework.WebUI.Models.ViewModels.KullaniciPageVM
@using PagedList;
@using PagedList.Mvc;

@{
    int sonSayfa = 0;
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


@if (Model.Errors != null && Model.Errors.Count > 0)
{
    <div id="content">
        <section id="widget-grid">
            <div class="row">
                <div class="row alert alert-danger">
                    <i class="glyphicon glyphicon-warning-sign col-md-1"></i>
                    <ul style="list-style-type:none" class="col-md-11">
                        @foreach (var item in Model.Errors)
                        {
                            <li>@item</li>
                        }
                    </ul>
                </div>
            </div>
        </section>
    </div>
}
@if (!Model.HideContent)
{
    <div id="content">
        <section id="widget-grid" class="sayfaust_bosluk">
            <div class="row">
                <article class="col-sm-12 col-md-12 col-lg-12">
                    <div class="jarviswidget" data-widget-colorbutton="false" data-widget-editbutton="false" data-widget-togglebutton="false" data-widget-deletebutton="false" data-widget-fullscreenbutton="false" data-widget-custombutton="false" data-widget-sortable="false">
                        <header>
                            <span class="widget-icon"> <i class="fa fa-list"></i> </span>
                            <h2>Kullanıcı Listesi - <b>Toplam Kullanıcı Adedi : @Model.TotalRecordCount</b></h2>
                            <div style="float:right; margin-top: -5px; padding-bottom: 8px;">
                                <p>
                                    @Html.AuthActionLink(" Rol Ekle", "Index", "UserRoles", "btn btn-info",
                                    "glyphicon glyphicon-plus", Convert.ToBoolean(TempData["OpenAuthorizationPopup"]))

                                    @Html.AuthActionLink(" Kullanıcı Ekle", "Ekle", "Users", "btn btn-primary",
                                    "glyphicon glyphicon-plus", Convert.ToBoolean(TempData["OpenAuthorizationPopup"]))
                                </p>
                            </div>
                        </header>
                        <div role="contentinfo">
                            <div class="widget-body">
                                <div class="tab-pane fade active in">
                                    <div class="form-group">
                                        <div class="col-md-12">
                                            <table id="dt_basic" class="table table-striped table-bordered table-hover dataTable no-footer" role="grid" aria-describedby="dt_basic_info">
                                                <thead>
                                                    <tr role="row">
                                                        <th style="width: 20px;">No</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Roller</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1">Kullanıcı Adı</th>
                                                        <th class="sorting_disabled" rowspan="1" colspan="1" style="width: 250px;">Durum</th>
                                                        <th class="sorting_disabled text-center" rowspan="1" colspan="1" style="text-align: right;  padding-right: 30px; width: 100px;">İşlem</th>
                                                    </tr>
                                                </thead>
                                                @if (Model.Kullanicilar != null && Model.Kullanicilar.Count > 0)
                                                {
                                                    <tbody>

                                                        @{int i = ((Model.PageNumber - 1) * Model.PageSize) + 1;}

                                                        @foreach (var item in Model.Kullanicilar)
                                                        {
                                                            string roleName = "";

                                                            var roleNames = item.User_Roles.Select(ur => ur.Roles.Name).ToArray();

                                                            roleName = string.Join(",", roleNames);
                                                            roleName = (!string.IsNullOrEmpty(roleName) ? roleName : "-");
                                                            <tr role="row" class="odd">
                                                                <td>@(i++)</td>
                                                                <td>@Html.DisplayFor(model => roleName)</td>
                                                                <td>@Html.DisplayFor(model => item.UserName)</td>
                                                                <td>
                                                                    @if (item.IsActive.HasValue && item.IsActive.Value)
                                                                    {
                                                                        <b class="label aktif-buton">Aktif</b>
                                                                    }
                                                                    else
                                                                    {
                                                                        <b class="label pasif-buton">Pasif</b>
                                                                    }
                                                                </td>
                                                                <td class="text-center">
                                                                    @Html.AuthAction(" ", "Duzenle", "Users", new { item.Guid },
                                                                         new { @class = "no-underline margin-right-5 fa fa-edit font-md txt-color-blue" },
                                                                         Convert.ToBoolean(TempData["OpenAuthorizationPopup"]))

                                                                    @Html.AuthAction(" ", "Sil", new { controllerName = "Roles", Id = item.Id },
                                                                                                    new { @class = "no-underline margin-right-5 fa fa-remove font-md txt-color-blue", @data_name = item.UserName, @data_id = item.Id },
                                                                                                    Convert.ToBoolean(TempData["OpenAuthorizationPopup"]))


                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                }
                                                else
                                                {
                                                    <tbody>
                                                        <tr class="odd">
                                                            <td valign="top" colspan="4" class="dataTables_empty">Tablo için gösterilecek bir kayıt bulunmamaktadır</td>
                                                        </tr>
                                                    </tbody>
                                                }
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </article>
            </div>
        </section>

    </div>

    using (Html.BeginForm("Index", "Users", new { page = 1 }, FormMethod.Post, new { @id = "sorgulamaKriterleri" }))
    {
        <input id="page" name="page" type="hidden" value="">
    }
}


@section pagespecific {
    @Scripts.Render("~/bundles/jqueryval")
     <link href="~/Content/SweetAlert/sweetalert2.css" rel="stylesheet" />
    <script src="~/Content/SweetAlert/sweetalert2.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            if (@sonSayfa < 8) {
                $("#sayfalama").css("display", "none");
            }
        });
    </script>

    <script type="text/javascript">

        $("#btnGit").on("click", function () {
            if (@sonSayfa > $("#sayfayaGit").val()) {
                $("#page").val($("#sayfayaGit").val());
                $("#sorgulamaKriterleri").submit();
            }
            else {
                $("#page").val(@sonSayfa);
                $("#sorgulamaKriterleri").submit();
            }
        });

    </script>
    <script type="text/javascript">

        function deletealert(Id, name, closestTR) {
            swal({
                title: "Uyarı",
                text: name + " Adlı Kullanıcıyı Silmek İstediğinizden Emin misiniz?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "Evet",
                cancelButtonText: "İptal"
            }).then(function (isConfirm) {
                if (isConfirm) {
                    $.ajax({
                        url: "/Users/Sil/" + Id,
                        type: 'POST',
                        success: function (result) {
                            if (result.success) {
                                closestTR.fadeOut(2000, function () {
                                    dt = $('#dt_basic').DataTable();
                                    swal('Bilgi!', name + ' ' + result.Message, 'success');
                                    location.reload();
                                });
                            }
                            else swal('Uyarı!', name + ' ' + result.Message, 'error');
                        }
                    });
                }
            })
        }
    </script>
    <!--Kullanıcı Silme İşlemi -->
    <script type="text/javascript">
        var dt;

        var dt_settings = {
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
            },
            "searching": true,
            "bPaginate": false,
        };

        $(".delete-row").click(function (e) {
            e.preventDefault();
            var id = $(this).attr("data-id");
            var name = $(this).attr("data-name");
            var closestTR = $(this).closest("tr");
            var vl = deletealert(id, name, closestTR);
        });

        $(document).ready(function () {
            dt = $('#dt_basic').DataTable(dt_settings);
        });

    </script>

}


